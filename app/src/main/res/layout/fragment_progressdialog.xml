<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.ProgressDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_24dp" />

        <TextView
            android:id="@+id/textViewMesagge"
            android:textAppearance="@style/Body1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_opt54"
            android:text="Text dialog" />
    </LinearLayout>

</LinearLayout>