<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppUberClone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Navigation Bar Color. -->
        <item name="android:navigationBarColor">@color/blue_900</item>
    </style>

    <style name="ButtonGreen" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@style/TextButton</item>
        <item name="android:backgroundTint">@color/green_500</item>
        <item name="android:textColor">@color/blue_700</item>
        <item name="rippleColor">@color/blue_500_opt38</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonWhite" parent="ButtonGreen">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@style/TextButton</item>
        <item name="rippleColor">@color/white_opt5</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <!-- STYLE TEXT -->
    <style name="TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="H1Text">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/text_34</item>
    </style>
    <style name="H2Text">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>
    <style name="H3Text">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>
    <style name="Subtitle2Text">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>
    <style name="Subtitle3Text">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="Body1Text">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>
    <style name="Body2Text">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="Body3Text">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="EditTextNight" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Body1Text</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="android:textColorHint">#61FFFFFF</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">@dimen/margin_24dp</item>
        <item name="android:paddingEnd">@dimen/margin_24dp</item>
    </style>

    <style name="EditTextNightHalf" parent="EditTextNight">
        <item name="android:background">@drawable/edittext_background_half</item>
        <item name="android:paddingEnd">@dimen/margin_4dp</item>
    </style>

    <style name="EditTextMapEnable" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Body1Text</item>
        <item name="android:background">@drawable/edittext_medium_backgroud</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_opt38</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditTextMapDisable" parent="EditTextMapEnable">
        <item name="android:textColor">@color/white_opt87</item>
    </style>

    <style name="EditTextMapDescription" parent="EditTextMapEnable">
        <item name="android:textColor">@color/white_opt87</item>
        <item name="android:textAppearance">@style/Body2Text</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>